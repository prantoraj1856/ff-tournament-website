rules_version = '2';
service cloud.firestore {
 match /databases/{db}/documents {
  match /users/{uid} {
   allow read, write: if request.auth.uid == uid;
  }
  match /tournaments/{id} {
   allow read: if true;
   allow write: if request.auth.token.admin == true;
  }
 }
}
